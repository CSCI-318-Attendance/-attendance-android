<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cl_i_view"
        android:layout_width="110dp"
        android:layout_height="106dp"
        android:contentDescription="@string/class_image_holder_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cl_title_view"
        android:layout_width="264dp"
        android:layout_height="51dp"
        android:layout_marginStart="6dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="18sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cl_i_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cl_course_view"
        android:layout_width="264dp"
        android:layout_height="55dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="18sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/cl_i_view"
        app:layout_constraintTop_toBottomOf="@+id/cl_title_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cl_course_time"
        android:layout_width="363dp"
        android:layout_height="57dp"
        android:layout_marginStart="1dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="18sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_i_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/cl_course_location"
        android:layout_width="363dp"
        android:layout_height="57dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="monospace"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textSize="18sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cl_course_time"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>